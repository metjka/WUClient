<com.example.current.schedule.Login.ShrinkingLinearLayout
    android:id="@+id/loginLinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    tools:context=".Login"

    android:orientation="vertical"
    android:weightSum="0"
    android:background="@drawable/back_gradient"

    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#4bffffff"
        android:layout_weight="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="5"
        android:weightSum="0">


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7.5"/>

        <ImageView
            android:background="@drawable/logoandtext_pl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="85"
            android:id="@+id/logoAndText" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7.5"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:weightSum="0"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7.5"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/errorTextView"

            android:layout_marginTop="30dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="85"

            android:text="@string/connection_error_text"
            android:textSize="25sp"
            android:textColor="@color/error_text_color"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7.5"
            />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="7"
        android:weightSum="0"

        android:background="@drawable/loginfields2"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical"
            android:weightSum="14.5">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.2"/>

            <EditText
                android:text="w47186"
                android:textSize="@dimen/abc_text_size_headline_material"
                android:inputType="textVisiblePassword"

                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5.0"
                android:id="@+id/loginField" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>

            <EditText
                android:text="35130070700"
                android:textSize="@dimen/abc_text_size_headline_material"
                android:inputType="textPassword"

                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5.0"
                android:id="@+id/passwordField" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.2"/>


            </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="horizontal"
        android:weightSum="0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="80"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="60">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="80"/>

            <Button
                android:fadingEdgeLength="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@drawable/golden_login_btn"
                android:textColor="#b0310b"
                android:text="@string/log_in_btn"
                android:textSize="20sp"

                android:id="@+id/loginBtn"
                android:layout_weight="60"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="80"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/language_panel"
        style="?android:buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:weightSum="0"
        >

        <Button
            style="?android:buttonBarButtonStyle"
            android:id="@+id/btnPL"

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:text="Polski"
            android:fadingEdgeLength="0dp"

            android:layout_weight="1"
            android:background="@drawable/language_btn"
            android:textColor="#b3dde1dc"
            android:gravity="center" />

        <Button
            style="?android:buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:fadingEdgeLength="0dp"
            android:text="Українська"
            android:id="@+id/btnUA"
            android:layout_weight="1"
            android:background="@drawable/language_btn"
            android:textColor="#b3dde1dc"
            android:gravity="center" />

        <Button
            style="?android:buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:fadingEdgeLength="0dp"
            android:text="English"
            android:id="@+id/btnEN"
            android:layout_weight="1"
            android:background="@drawable/language_btn"
            android:textColor="#b3dde1dc"
            android:gravity="center" />

    </LinearLayout>



</com.example.current.schedule.Login.ShrinkingLinearLayout>
